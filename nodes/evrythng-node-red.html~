<script type="text/javascript">
    RED.nodes.registerType('evrythng',{
        category: 'storage-input',
        color: '#FFFFFF',
        icon: 'evtTinySquare.png',
        defaults: {
            name: {value:""},
            thng: {value:"",required:true},
            property: {value:"",required:true},
            propertyValue: {value:"",required:false},
            method: {value:"get",required:true},
            key: {value:"",required:true}
        },
        inputs:1,
        outputs:1,
        icon: "file.png",
        label: function() {
            return this.name||"evrythng";
        }
    });
</script>

